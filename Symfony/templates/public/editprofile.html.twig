{% extends 'base.html.twig' %}

{% block body %}
<div class="edit-profile-form">
    <h1>Modifier le profil</h1>
    {{ form_start(editProfileForm) }}
        {{ form_row(editProfileForm.email, {
            label: 'Email'
        }) }}
        {{ form_row(editProfileForm.roles, {
            label: 'Rôles'
        }) }}
        {{ form_row(editProfileForm.password, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(editProfileForm.username, {
            label: 'Nom d\'utilisateur'
        }) }}
        {{ form_row(editProfileForm.name, {
            label: 'Nom'
        }) }}
        <button type="submit" class="site-btn">Mettre à jour</button>
    {{ form_end(editProfileForm) }}
</div>
{% endblock %}