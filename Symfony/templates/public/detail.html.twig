{% extends 'base.html.twig'%}

{% block body %}
<!-- Shop Details Section Begin -->
<section class="shop-details">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="product__details__pic">
                    <div class="row">
                        <div class="col-lg-6 col-md-9">
                            <div class="tab-content">
                                <div class="tab-pane active" id="tabs-1" role="tabpanel">
                                    <div class="imgdetail" style="display: flex; align-items: center; justify-content: center; height: 100%;">
                                        <img class="imgdetail" src="/img/product/{{product.imagefile}}" alt="" style="max-width: 500px; max-height: 800px;">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-9">
                            <div class="product__details__content">
                                <div class="product__details__breadcrumb">
                                    <a href="./index.html">Home</a>
                                    <a href="./shop.html">Shop</a>
                                    <span>Product Details</span>
                                </div>
                                <div class="product__details__text">
                                    <h4>{{ product.title }}</h4>
                                    <a href="{{ path('app_vendeur', {'id': product.users.id}) }}" class="userdetail">{{ product.users }}</a>
                                    <h3>{{product.price}}â‚¬</h3>
                                    <p>{{product.description}}</p>
                                    <div class="product__details__btns__option">
                                        {% if app.user and product in favorisProducts %}
                                            <a href="{{ path('app_favoris_ajouter', {'productId': product.id}) }}" class="favoris-btn favoris-btn-active"><i class="fa fa-heart"></i> Ajouter aux Favoris</a>
                                        {% else %}
                                            <a href="{{ path('app_favoris_ajouter', {'productId': product.id}) }}" class="favoris-btn"><i class="fa fa-heart"></i> Ajouter aux Favoris</a>
                                        {% endif %}
                                    </div>
                                    <div class="product__details__last__option">
                                        <h5><span>Livraison Garantie !</span></h5>
                                        <ul>
                                            <li><span>Categories:</span> {{product.category}}</li>
                                        </ul>
                                    </div>
                                    <div class="product__details__cart__option">
                                        <a href="#" class="primary-btn">Acheter</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shop Details Section End -->
{% endblock %}
