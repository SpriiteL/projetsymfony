<!-- Promos -->
{% for product in products %}
    {% if product.id == 12 %}
        <section class="categories spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="categories__text">
                            <h2>Promotion <br /> <span>{{product.title}}</span> <br /> {{product.category}}</h2>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="categories__hot__deal">
                            <img src="img/product/{{product.imagefile}}" alt="">
                            <div class="hot__deal__sticker">
                                <span>Promo !</span>
                                <h5><strike>{{product.price}}</strike> | 20â‚¬</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 offset-lg-1">
                        <div class="categories__deal__countdown">
                            <span>Promotion {{product.users}}</span>
                            <h2>{{product.title}}</h2>
                            <div class="categories__deal__countdown__timer" id="countdown">
                                <div class="cd-item">
                                    <span id="days"></span>
                                    <p>Jours</p>
                                </div>
                                <div class="cd-item">
                                    <span id="hours"></span>
                                    <p>Heures</p>
                                </div>
                                <div class="cd-item">
                                    <span id="minutes"></span>
                                    <p>Minutes</p>
                                </div>
                                <div class="cd-item">
                                    <span id="seconds"></span>
                                    <p>Secondes</p>
                                </div>
                            </div>
                            <a href="#" class="primary-btn">Contacter</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}
{% endfor %}
    <!-- Categories Section End -->