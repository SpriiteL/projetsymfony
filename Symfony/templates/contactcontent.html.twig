
{% extends 'base.html.twig' %}

{% block body %}
<section class="contact spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="contact__text">
                        <div class="section-title">
                            <span>Information</span>
                            <h2>Contactez-Nous</h2>
                            <p>Nos équipes vous répondront le plus rapidement possible, dés receptions de votre requête.</p>
                        </div>
                        <ul>
                            <li>
                                <h4>France</h4>
                                <p>Beaupeyrat, 9 rue Pietinaud, 87000, Limoges <br>+33 6 40 90 23 93</p>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="contact__form">
                       <form action="{{ path('app_contact') }}" method="post">
                            <div class="row">
                                <div class="col-lg-6">
                                    <input type="text" name="nom" placeholder="Nom">
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" name="mail" placeholder="Email">
                                </div>
                                <div class="col-lg-12">
                                    <textarea name="message" placeholder="Message"></textarea>
                                    <button type="submit" name="envoyer" class="site-btn">Envoyer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}